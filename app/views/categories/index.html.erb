<h1>Categories#index</h1>
<p>Find me in app/views/categories/index.html.erb</p>
<ol>
  <% @categories.each do |category| %>
    <li>
      <%= link_to category_products_path(category) do %>
        <%= category.title %>
        (<%= category.products.count %> products)
      <% end %>
    </li>
  <% end %>
</ol>